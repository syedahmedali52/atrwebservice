#####################################################################################
# Path to system nlp resources, including nlp processor models e.g., POS tagging,   #
# chunking; stop list files, lemmatiser                                             #
#####################################################################################
jatr.system.nlp=/mnt/minerva1/nlp/software/jatr/nlp_resources

#####################################################################################
# Path to the file storing mappings from a term's canonical form to its variants    #
#####################################################################################

# I don't think that file exists anywhere nor know what is supposed to be there (ischmidt)
jatr.system.term.variant_mapping=/mnt/minerva1/nlp/software/jatr/nlp_resources/map.txt

# Path to background corpus counts

# (ischmidt) I added this property so I could easily change other background corpora...
# jatr.system.refcorpus=/mnt/minerva1/nlp/software/jatr/nlp_resources/bnc_unifrqs.normal
jatr.system.refcorpus=/mnt/minerva1/nlp/corpora/monolingual/english/gigaword/gw.lemmas.unigram_counts

#####################################################################################
# Maximum number of words allowed in a multi-word term. Default value is 5          #
#####################################################################################
jatr.system.term.maxwords=5

#####################################################################################
# Weather digits are allowed present in a term. Default if false                    #
#####################################################################################
jatr.system.term.ignore_digits=true
